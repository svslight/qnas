<% # Когда контроллер будет отрабатывать будет рендериться этот вид %>
<% # append - Добавление (render) партиала - @answer к списку Ответов %>

$('.answer-errors').html('<%= render 'shared/errors', resource: @answer %>');

<% if @answer.persisted? %>
  $('.question_answers').append('<%= j render @answer %>');
  $('.new-answer #answer_body').val('');
<% end %>
